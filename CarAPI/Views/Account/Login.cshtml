@model CarAPI.Models.Login

<h2>Logowanie</h2>

@using (Html.BeginForm("Login", "Account" , FormMethod.Post))
{
    @Html.ValidationSummary();
    <div>
    <span>Login: </span> @Html.TextBoxFor(x => x.UserName)
    </div>
    <div>
    <span>Hasło: </span> @Html.PasswordFor(x => x.Password)
    </div>

    <button class="btn btn-primary" type="submit">Zaloguj</button>

}

